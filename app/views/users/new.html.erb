<h4>Want to create your trip? Please Sign Up </h4>

<div class="row">
  <div class="col-md-5">

    <p><%= @message %></p>

    <%= form_tag "/users", "method" => "post"  %>

      <div class="form-group">
        <%= label_tag "first_name", "First Name:" %>
        <%= text_field_tag "first_name", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "last_name", "Last Name" %>
        <%= text_field_tag "last_name", "", "class" => "form-control" %>

      </div>

      <div class="form-group">
        <%= label_tag "username", "Choose a username:" %>
        <%= text_field_tag "username", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "password", "Password" %>
        <%= password_field_tag "password", "", "class" => "form-control" %>

      </div>

      <%= submit_tag "Log In", "class" => "btn btn-success" %> or <%= link_to "Cancel", "/" %>

    </form>
</div>
</div>
